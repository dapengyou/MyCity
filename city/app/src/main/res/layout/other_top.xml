<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="38dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bottom_bar" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <LinearLayout
            android:id="@+id/id_tab_other_top_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成绩"
                android:textColor="#ffffffff"
                android:textSize="35px" />

            <TextView
                android:id="@+id/id_top_bar_1"
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#34CED9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_other_top_news"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="新闻" 
                android:textSize="35px"/>
            <TextView
                android:id="@+id/id_top_bar_2"
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#34CED9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_other_top_fit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="设置" 
                android:textSize="35px"/>
            <TextView
                android:id="@+id/id_top_bar_3"
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:background="#34CED9" />
        </LinearLayout>

    </LinearLayout>

    
</RelativeLayout>